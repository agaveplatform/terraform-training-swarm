version: '3.7'

networks:
  swarm_overlay:
    external: true
    name: {{ swarm_overlay_network_name }}
{#  gitlab:#}
{#    external: true#}
{#    name: gitlab_gitlab#}

services:

  traefik:
    image: traefik:latest
    hostname: {{ traefik_hostname }}
    command: --configFile=/run/secrets/traefik_config_file
    secrets:
        - traefik_config_file
    networks:
      - swarm_overlay
{#      - gitlab#}
    ports:
      - target: 80
        published: 80
        protocol: tcp
        mode: host
      - target: 443
        published: 443
        protocol: tcp
        mode: host
      - target: 28443
        published: 28443
        protocol: tcp
        mode: host
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - {{ traefik_cert_deployment_dir }}:/ssl
{% if (traefik_debug|bool) == false %}
      - {{ traefik_log_dir }}:/logs
{% endif %}
    deploy:
      placement:
        constraints:
            - "node.role == manager"
            - "node.labels.leader == true"
      labels:
        - ops.service.type=proxy
        - ops.service.name=traefik
        - traefik.enable=true
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s
      update_config:
        parallelism: 1
        delay: 10s
        failure_action: rollback
        monitor: 10s
        max_failure_ratio: 0.3

secrets:
  traefik_config_file:
    file: "{{ traefik_deployment_dir }}/traefik.toml"
